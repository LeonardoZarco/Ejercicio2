@model API.Models.Numeros
@{
    ViewBag.Title = "Numbers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>


<div class="row">
    <div class="cardsNumbers">
        @for (int i = 1; i <= 100; i++)
        {
            <div class="card">
                <div class="face face1">
                    <div class="icon">
                        <i class="" aria-hidden="true">@(i)</i>
                    </div>
                </div>
                <div class="face face2">
                    <div class="content">
                        <h3>
                            <a href="@Url.Action("ExtraerNumero", "EjercicioAPI" , new {Numero=i})">
                                select
                            </a>
                        </h3>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<br />
<br />

<div class="row">
    <div class="col-md-12">
        <h3>Presione el siguiente botón para obtener el número extraido</h3>
        <a href="@Url.Action("GetNumeroExtraido", "EjercicioAPI")" class="btn btn-info">
            Obtener
        </a>
        <br />

        @Html.LabelFor(model => model.Numero)
        <div class="input-group">
            @Html.TextBoxFor(model => model.Numero, new { @class = "form-control" })
        </div>
    </div>
</div>


<style>

    .cardsNumbers {
        width: 1000px;
        position: relative;
        display: flex;
        justify-content: space-between;
    }

        .cardsNumbers .card {
            position: relative;
            border-radius: 10px;
            padding: 10px;
        }

            .cardsNumbers .card .icon {
                position: relative;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: #f00;
                transition: 0.7s;
                z-index: 1;
            }

            /**/

            .cardsNumbers .card:nth-child(n+1) .icon {
                background: #4aada9;
            }


            .cardsNumbers .card .icon .fa {
                position: relative;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                font-size: 50px;
                transition: 0.7s;
                color: #fff;
            }

    i {
        position: relative;
        top: 0%;
        left: 28%;
        transform: translate(-50%, -50%);
        font-size: 50px;
        transition: 0.7s;
        color: #fff;
    }

    .cardsNumbers .card .face {
        width: 100px;
        height: 100px;
        transition: 0.5s;
    }

        .cardsNumbers .card .face.face1 {
            position: relative;
            background: #4aada9;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1;
            transform: translateY(100px);
        }

    .cardsNumbers .card:hover .face.face1 {
        background: #ff0057;
        transform: translateY(0px);
    }

    .cardsNumbers .card .face.face1 .content {
        opacity: 1;
        transition: 0.5s;
    }

    .cardsNumbers .card:hover .face.face1 .content {
        opacity: 1;
    }

    .cardsNumbers .card .face.face1 .content i {
        max-width: 100px;
    }

    .cardsNumbers .card .face.face2 {
        position: relative;
        background: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        box-sizing: border-box;
        box-shadow: 0 20px 50px rgba(0,0,0,0.8);
        transform: translateY(-0px);
    }

    .cardsNumbers .card:hover .face.face2 {
        transform: translateY(0);
    }

    .cardsNumbers .card .face.face2 .content p {
        margin: 0;
        padding: 0;
        text-align: center;
        color: #414141;
    }

    .cardsNumbers .card .face.face2 .content h3 {
        margin: 0 0 10px 0;
        padding: 0;
        color: #fff;
        font-size: 24px;
        text-align: center;
        color: #414141;
    }

    .cardsNumbers a {
        text-decoration: none;
        color: #414141;
    }
</style>

